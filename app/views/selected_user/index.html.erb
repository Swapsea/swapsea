<div class="table-responsive">
	<table id="switch-user-table" class="table table-striped dataTable row-border no-footer nowrap" cellspacing="0" width="100%" data-table="true">
		<thead>
			<th class="visible-xs"></th>
			<th class="hidden-xs">Club</th>
			<th>Name</th>
			<th class="hidden-xs">Member ID</th>
			<th class="hidden-xs"></th>
		</thead>
		<tbody>
		<% @switch_users.each do |user| %>
			<% if user.first_name? || user.last_name? %>

				<tr>
					<td class="visible-xs"><%= link_to 'Switch', selected_user_path(:uid => user.id, :referrer => @referrer), :method => :post, :class => "btn btn-success btn-sm pull-right" %></td>
					<td class="hidden-xs"><%= user.organisation %></td>
					<td><%= user.name %> <i><%= truncate user.patrol_name, :length => 15 %></i></td>
					<td class="hidden-xs"><%= user.id %></td>
					<td class="hidden-xs"><%= link_to 'Switch', selected_user_path(:uid => user.id, :referrer => @referrer), :method => :post, :class => "btn btn-success btn-sm pull-right" %></td>
				</tr>

			<% end %>
		<% end %>
		</tbody>
	</table>
</div><!--/.table-responsive -->