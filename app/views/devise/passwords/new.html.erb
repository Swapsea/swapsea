<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Forgot your password?<h2/>
            </div>
            <div class="panel-body">
            	<p>
                    Enter your email as registered with <a href="https://portal.slsa.com.au/">SLSA Members Area</a> below and we'll send you instructions on how to reset it.
                </p>
    			<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    			<%= f.error_notification %>
    			    <div class="form-group login-input">
                    	<%= f.input :email, :required => true, :placeholder =>  'Email', label: false, input_html: { class: 'form-control text-input' }, :autofocus => true %>
                    </div>
                    <div class="buttons">
                        <%= f.button :submit, 'Send Password Reset', :class => 'btn btn-success btn-block', data: { disable_with: "Please wait..." } %>
                    </div>
    			<% end %>
                <div class="links">
                    <%= link_to 'Back', :back %>
                </div>
            </div>
        </div>
    </div>      
</div>