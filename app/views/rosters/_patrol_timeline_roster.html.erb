<div class="patrol row">
  <div class="col-sm-9">
      <strong><%= p.patrol.club.short_name %></strong><br />
    <strong>
      <% if p.patrol.present? %>
        <%= p.patrol.name %>
      <% end %>
    </strong>
    <%= p.start.strftime("%H:%M") %> - <%= p.finish.strftime("%H:%M") %><br/>
  </div>
  <div class="col-sm-3">
    <%= link_to 'View', patrol_roster_path(p), :class => "btn btn-success pull-right" %>
  </div>
</div><!--/.patrol -->

<div class="members">
  <% p.removed.sort_by(&:last_name).each do |u| %>
    <div class="member row out">
      <div class="name col-xs-10"><%= u.name %></div><div class="status col-xs-2">Out</div>
    </div>
  <% end %>
  <% p.added.sort_by(&:last_name).each do |u| %>
    <div class="member row in">
      <div class="name col-xs-10"><%= u.name %></div><div class="status col-xs-2">In</div>
    </div>
  <% end %>

  <% @open_requests.where(roster_id: p.id).each do |open_req| %>
    <div class="member row open">
      <div class="name col-xs-10"><%= open_req.user.name %> (<%= time_ago_in_words(open_req.created_at) %>)</div><div class="status col-xs-2">Open</div>
    </div>
  <% end %>

</div>
