<% if activity.trackable %>
 <p>
 	<%= activity.trackable.request.user.first_name %>
 	declined an offer on
 	<%= activity.trackable.request.roster.start.strftime("%a %d %b") + ", " + activity.trackable.request.roster.start.strftime("%H:%M") + " - " + activity.trackable.request.roster.finish.strftime("%H:%M") + " (" + activity.trackable.request.roster.patrol.short_name + ")" %> <%= time_ago_in_words(activity.created_at) %> ago.
 </p>
 <% else %>
 <p>
 	<%= activity.owner.first_name if activity.owner %>
 	declined an offer.
 </p>
 <% end %>
