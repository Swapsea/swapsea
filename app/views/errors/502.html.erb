<div class="container">
    <div class="full-content-center animated fadeIn extra-margin-top">
        <%= image_tag('alternate-logo.png', :class => "modal-logo") %>
        <div class="box-info exceptions">
          <h2>Bad Gateway</h2>
          <% if @exception %>
          	<p><%= @exception.message %></p>
          <% else %>
          	<p>Something went wrong while the server was acting as a gateway. We'll look into it.</p>
          <% end %>
    </div>
    <%= link_to "Back", :back %>
    </div>
</div>
