<div class="container">
    <div class="full-content-center animated fadeIn extra-margin-top">
        <%= image_tag('alternate-logo.png', :class => "modal-logo") %>
        <div class="box-info exceptions">
          <h2>Gateway Timeout</h2>
          <% if @exception %>
          	<p><%= @exception.message %></p>
          <% else %>
          	<p>The server whilst acting as a gateway or proxy, did not recieve a timely response. Check back shortly.</p>
          <% end %>
    </div>
    <%= link_to "Back", :back %>
    </div>
</div>
