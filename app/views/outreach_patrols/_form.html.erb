<%= simple_form_for(@outreach_patrol) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  <% if selected_user.has_role?(:admin)  %>
    <%= f.association :club, collection: Club.with_active.order(:name), label_method: :name, value_method: :id, include_blank: false %>
  <% end %>
    <%= f.input :location %><br/>
    <%= f.input :start, :minute_step => 15 %><br/>
    <%= f.input :finish, :minute_step => 15 %><br/>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-default' %>
  </div>
<% end %>
