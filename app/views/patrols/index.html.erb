<% content_for(:title){ "Patrols" } %>

<h2><%= content_for(:title) %></h2>
<div class="row">
  <div class="col-sm-12">
    <% @clubs.each do |club| %>
      <div class="col-sm-12">
        <h3><%= club.name %></h3>
          <% club.patrols.map do |patrol| %>
            <div class="patrol">
              <%= link_to patrol.short_name, (patrol_path patrol) %>
            </div>
          <% end %>
        </div>
    <% end %>
  </div>
</div>
